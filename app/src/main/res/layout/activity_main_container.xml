<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <vadevelopment.ideation360.design.HelviticaBold
                android:id="@+id/centerTitle"
                style="@style/largeMaxText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/ideationString"

                />

        </RelativeLayout>
        

    </android.support.v7.widget.Toolbar>



    <RadioGroup
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/flairColor"
        android:layout_height="@dimen/bottomHeight"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">


        <RelativeLayout
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:button="@drawable/ic_search"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:background="@color/dividerColor"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />


        <RelativeLayout
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_weight="1.4"
            android:gravity="center"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:button="@drawable/ic_add"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <View
            android:layout_width="4px"
            android:layout_height="match_parent"
            android:background="@color/dividerColor"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />

        <RelativeLayout
            android:padding="4dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:layout_height="match_parent">

            <RadioButton
                android:layout_width="wrap_content"
                android:background="@null"
                android:gravity="center_horizontal"
                android:button="@drawable/ic_profile"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </RadioGroup>


</RelativeLayout>