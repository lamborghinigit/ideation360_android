<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="@dimen/mediumtext"
        android:layout_marginRight="@dimen/mediumtext"
        android:layout_alignParentBottom="true"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/mediumtext"
        android:id="@+id/ll_outer"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/campaign_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/date"
            android:paddingRight="@dimen/paddingitemdrawersmall"
            android:text="dgdgf"
            android:textColor="#000000"
            android:textSize="@dimen/textbutton" />

        <vadevelopment.ideation360.design.HelviticaRegular
            android:id="@+id/ideas_submited"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my first compaign"
            android:textColor="#000000"
            android:textSize="@dimen/mediumtext" />

        <vadevelopment.ideation360.design.HelviticaRegular
            android:id="@+id/days_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="my first compaign"
            android:textColor="#000000"
            android:textSize="@dimen/mediumtext" />

    </LinearLayout>


</RelativeLayout>
