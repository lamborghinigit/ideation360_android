<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="@dimen/mediumtext"
        android:layout_marginRight="@dimen/mediumtext"
        android:layout_alignParentBottom="true"></View>

    <LinearLayout
        android:id="@+id/ll_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smalltext"
        android:gravity="center_vertical"
        android:padding="@dimen/mediumtext"
        android:orientation="vertical">

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/discription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/date"
            android:paddingRight="@dimen/paddingitemdrawersmall"
            android:text="Tomdsvdvdvv"
            android:textColor="#000000"
            android:textSize="@dimen/textbutton" />

        <vadevelopment.ideation360.design.HelviticaRegular
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/maintitle"
            android:layout_toLeftOf="@+id/date"
            android:text="my first compaign"
            android:textColor="#000000"
            android:textSize="@dimen/mediumtext" />

    </LinearLayout>


</RelativeLayout>
