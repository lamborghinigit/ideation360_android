<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/screenpadding"
    android:paddingRight="@dimen/screenpadding"
    android:paddingTop="@dimen/screenpadding">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/paddingitemdrawersmall"
        android:clipToPadding="false"
        android:fadeScrollbars="false"
        android:scrollX="0px"
        android:scrollY="0px"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarSize="@dimen/paddingitemdrawersmall"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="none"></android.support.v7.widget.RecyclerView>

</LinearLayout>
