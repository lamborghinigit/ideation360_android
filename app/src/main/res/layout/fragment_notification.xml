<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/smalltext"
        android:layout_marginRight="@dimen/smalltext"
        android:layout_marginTop="@dimen/smalltext"
        android:orientation="vertical"
        android:padding="@dimen/screenpadding">

        <vadevelopment.ideation360.design.AppCompatButtonHelviticaBold
            android:id="@+id/newbtn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:layout_marginTop="@dimen/margintop"
            android:background="@drawable/bg_notibtn"
            android:gravity="center"
            android:text="@string/newnoti"
            android:textColor="@android:color/black"
            android:textSize="@dimen/mediumtext" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smalltext">

        </android.support.v7.widget.RecyclerView>

        <vadevelopment.ideation360.design.AppCompatButtonHelviticaBold
            android:id="@+id/seen"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:layout_marginTop="@dimen/margintop"
            android:background="@drawable/bg_notibtn"
            android:gravity="center"
            android:text="@string/seennoti"
            android:textColor="@android:color/black"
            android:textSize="@dimen/mediumtext" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_seen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/smalltext">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
