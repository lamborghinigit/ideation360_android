<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/mediumtext"
        android:layout_marginRight="@dimen/mediumtext"
        android:background="#000000"></View>

    <RelativeLayout
        android:id="@+id/rl_outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mediumtext">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="@dimen/margintop_loginbtn"
            android:layout_height="@dimen/margintop_loginbtn"
            android:src="@drawable/profileimg" />


        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image"
            android:paddingLeft="@dimen/smalltext"
            android:text="Tomdsvdvdvv"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:textSize="@dimen/textbutton" />


    </RelativeLayout>

</RelativeLayout>
