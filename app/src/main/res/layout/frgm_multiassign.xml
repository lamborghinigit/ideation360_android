<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <vadevelopment.ideation360.design.HelviticaBold
        android:id="@+id/hiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="@dimen/margintop_loginbtn"
        android:paddingRight="@dimen/margintop_loginbtn"
        android:paddingTop="@dimen/screenpadding"
        android:paddingBottom="@dimen/screenpadding"
        android:text="@string/chooseclient"
        android:textColor="#000000"
        android:textSize="@dimen/largetext" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearAddbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"></LinearLayout>

    </ScrollView>


</LinearLayout>