<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/smalltext"
        android:layout_marginRight="@dimen/smalltext"
        android:layout_marginTop="@dimen/smalltext"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/screenpadding">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageview"
            android:layout_width="@dimen/accountimage"
            android:layout_height="@dimen/accountimage"
            android:src="@drawable/editprofile_icon" />

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margintop_loginbtn"
            android:gravity="center"
            android:text="text user"
            android:textColor="#000000"
            android:textSize="@dimen/largetext" />

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/textemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_loginbtn"
            android:gravity="center"
            android:text="@string/emailtext"
            android:textColor="#000000"
            android:textSize="@dimen/textbutton" />

        <vadevelopment.ideation360.design.AppCompatButtonHelviticaBold
            android:id="@+id/updatephoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonheight"
            android:layout_marginTop="@dimen/margintop_loginbtn"
            android:background="@drawable/dr_rounded_black"
            android:gravity="center"
            android:text="@string/updatephoto"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textbutton" />

    </LinearLayout>


</ScrollView>