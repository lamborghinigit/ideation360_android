<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/smalltext"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/screenpadding">

        <RelativeLayout
            android:layout_width="@dimen/accountimage"
            android:layout_height="@dimen/accountimage">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageview"
                android:layout_width="@dimen/accountimage"
                android:layout_height="@dimen/accountimage"
                app:civ_border_color="#FF000000"
                android:background="@drawable/editprofile_icon"
                app:civ_border_width="2dp" />

            <ImageView
                android:id="@+id/editimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="invisible"
                android:src="@drawable/editicon"/>

        </RelativeLayout>

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/margintop_loginbtn"
            android:gravity="center"
            android:text="text user"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/smalltext"
            android:layout_marginRight="@dimen/smalltext"
            android:textSize="@dimen/largetext" />

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/textemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margintop_loginbtn"
            android:gravity="center"
            android:text="@string/emailText"
            android:textColor="#000000"
            android:textSize="@dimen/mediumtext" />

        <vadevelopment.ideation360.design.AppCompatButtonHelviticaBold
            android:id="@+id/updatephoto"
            android:layout_width="match_parent"
            android:layout_height="@dimen/buttonheight"
            android:layout_marginTop="@dimen/margintop_loginbtn"
            android:background="@drawable/dr_rounded_black"
            android:gravity="center"
            android:text="@string/updatephoto"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/smalltext"
            android:layout_marginRight="@dimen/smalltext"
            android:textSize="@dimen/textbutton" />

    </LinearLayout>


</ScrollView>