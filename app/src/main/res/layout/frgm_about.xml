<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/screenpadding"
    android:layout_marginTop="@dimen/smalltext"
    android:layout_marginLeft="@dimen/smalltext"
    android:layout_marginRight="@dimen/smalltext">


    <vadevelopment.ideation360.design.HelviticaBold
        android:id="@+id/hiText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:text="@string/whowe"
        android:textColor="#000000"
        android:textSize="@dimen/largetext" />

    <vadevelopment.ideation360.design.HelviticaRegular
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/screenpadding"
        android:gravity="center"
        android:textColor="#000000"
        android:text="@string/abouttext"
        android:textSize="@dimen/textbutton" />

</LinearLayout>
