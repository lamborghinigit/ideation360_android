<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="@dimen/mediumtext"
        android:layout_marginRight="@dimen/mediumtext"
        android:layout_alignParentBottom="true"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mediumtext"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/paddingitemdrawersmall"
            android:layout_weight=".2">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/profileimg"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".8">

            <vadevelopment.ideation360.design.HelviticaBold
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tom"
                android:textColor="#000000"
                android:textSize="@dimen/textbutton" />

            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/compaign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:text="my first compaign"
                android:textColor="#000000"
                android:textSize="@dimen/mediumtext" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_height="wrap_content"
                android:layout_below="@+id/compaign"
                android:layout_marginTop="2dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="4"
                android:progressTint="#000000" />


            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/commentp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ratingBar"
                android:layout_below="@+id/compaign"
                android:text="0"

                android:textColor="#000000"
                android:drawableLeft="@drawable/profilerow"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/mediumtext" />

            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/commentl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/compaign"
                android:text="0"
                android:textColor="#000000"
                android:drawableLeft="@drawable/commentimg"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/mediumtext" />


            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017.06.12"
                android:textColor="#000000"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/smalltext" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
