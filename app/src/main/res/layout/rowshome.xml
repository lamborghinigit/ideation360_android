<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginLeft="@dimen/mediumtext"
        android:layout_marginRight="@dimen/mediumtext"
        android:layout_alignParentBottom="true"></View>

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/mediumtext"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/paddingitemdrawersmall"
            android:layout_weight=".2">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image"
                android:layout_width="@dimen/margintop_loginbtn"
                android:layout_height="@dimen/margintop_loginbtn"
                android:layout_centerVertical="true"
                android:src="@drawable/profileimg"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight=".8">

            <vadevelopment.ideation360.design.HelviticaBold
                android:id="@+id/maintitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tomdsvdvdvsdvsvsvsssdvsvvsdsdv"
                android:textColor="#000000"
                android:layout_toLeftOf="@+id/date"
                android:paddingRight="@dimen/paddingitemdrawersmall"
                android:textSize="@dimen/textbutton" />

            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/compaign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/maintitle"
                android:text="my first compaign"
                android:textColor="#000000"
                android:layout_toLeftOf="@+id/date"
                android:textSize="@dimen/mediumtext" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                style="@style/foodRatingBar"
                android:layout_height="wrap_content"
                android:layout_below="@+id/compaign"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.4" />


            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/noof_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/ratingBar"
                android:layout_below="@+id/compaign"
                android:text="0"
                android:textColor="#000000"
                android:drawableLeft="@drawable/profilerow"
                android:gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="@dimen/paddingitemdrawersmall"
                android:textSize="@dimen/mediumtext" />

            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/noof_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/compaign"
                android:text="0"
                android:textColor="#000000"
                android:drawableLeft="@drawable/commentimg"
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/paddingitemdrawersmall"
                android:layout_marginLeft="4dp"
                android:textSize="@dimen/mediumtext" />


            <vadevelopment.ideation360.design.HelviticaRegular
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="2017.06.12"
                android:textColor="#000000"
                android:paddingTop="3dp"
                android:textSize="@dimen/smalltext" />

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
