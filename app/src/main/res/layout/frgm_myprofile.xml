<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/smalltext"
        android:layout_marginRight="@dimen/smalltext"
        android:layout_marginTop="@dimen/smalltext"
        android:orientation="vertical"
        android:paddingLeft="@dimen/screenpadding"
        android:paddingRight="@dimen/screenpadding"
        android:paddingTop="@dimen/textbutton">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview"
                    android:layout_width="@dimen/homeimage"
                    android:layout_height="@dimen/homeimage"
                    android:src="@drawable/myprofileimg" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".7"
                android:gravity="center_vertical">

                <vadevelopment.ideation360.design.HelviticaRegular
                    android:id="@+id/myind_idea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ideasc"
                    android:textColor="#000000"
                    android:textSize="@dimen/mediumtext" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/paddingitemdrawersmall"
                    android:layout_marginLeft="@dimen/smalltext"
                    android:layout_marginRight="@dimen/smalltext"
                    android:layout_marginTop="@dimen/paddingitemdrawersmall"
                    android:background="#000000"></View>

                <vadevelopment.ideation360.design.HelviticaRegular
                    android:id="@+id/compaign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 campaign"
                    android:textColor="#000000"
                    android:textSize="@dimen/mediumtext" />

            </LinearLayout>
        </LinearLayout>

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/screenpadding"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/largetext" />

        <vadevelopment.ideation360.design.HelviticaRegular
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/screenpadding"
            android:text="a@gmail.com"
            android:textColor="#000000"
            android:textSize="@dimen/mediumtext" />

        <vadevelopment.ideation360.design.HelviticaBold
            android:id="@+id/myidea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/screenpadding"
            android:text="@string/myidea"
            android:textColor="#000000"
            android:textSize="@dimen/textbutton" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/screenpadding">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</ScrollView>
